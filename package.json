{
  "name": "novoice",
  "author": "ikwy",
  "version": "0.7.4",
  "description": "NoVoice",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:publish": "vite build && electron-builder --win nsis --publish always",
    "electron:publish:portable": "vite build && electron-builder --win portable --publish always",
    "electron:build:portable": "vite build && electron-builder --win portable",
    "server:dev": "node server/index.js",
    "server:start": "node server/index.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "electron-updater": "^6.8.3",
    "express": "^4.21.1",
    "framer-motion": "^11.11.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.460.0",
    "nanoid": "^3.3.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sql.js": "^1.11.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^6.0.3",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.novoice.app",
    "productName": "NoVoice",
    "directories": {
      "output": "dist-electron"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "imikwy",
        "repo": "NoVoice-Application"
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "!server/node_modules/**",
      "!server/.env",
      "!server/novoice.db",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NoVoice"
    },
    "portable": {
      "artifactName": "NoVoice-portable.exe"
    }
  }
}
